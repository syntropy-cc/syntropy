# Dockerfile.dev
FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./

# Use npm install se não houver package-lock.json, senão use npm ci
RUN if [ -f package-lock.json ]; then npm ci; else npm install; fi

# Copy source code (será sobrescrito pelo volume mount)
COPY . .

# Expose port
EXPOSE 3000

# Start development server with hot reload
CMD ["npm", "run", "dev"]